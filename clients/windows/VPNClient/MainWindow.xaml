<Window x:Class="VPNClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VPNClient.Views"
        xmlns:vm="clr-namespace:VPNClient.ViewModels"
        mc:Ignorable="d"
        Title="VPN Client"
        Height="700"
        Width="450"
        MinHeight="600"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="VPN Shield" FontSize="20" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Settings Button -->
                <Button Grid.Column="2" Style="{StaticResource SecondaryButtonStyle}"
                        Padding="12,8" Click="SettingsButton_Click">
                    <TextBlock Text="Settings" FontSize="12"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">

                <!-- Connection Status Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Status Indicator -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse x:Name="StatusIndicator" Width="12" Height="12"
                                     Fill="{StaticResource ErrorBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" Grid.Column="1" Text="Disconnected"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Connection Info (visible when connected) -->
                        <StackPanel x:Name="ConnectionInfoPanel" Visibility="Collapsed">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="IP Address" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="IpAddressText" Text="--"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Connection Time" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="ConnectionTimeText" Text="00:00:00"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Download" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="DownloadText" Text="0 B/s"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Upload" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="UploadText" Text="0 B/s"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Connect Button -->
                        <Button x:Name="ConnectButton" Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Stretch" Margin="0,16,0,0"
                                Click="ConnectButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ConnectButtonText" Text="Connect" FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Login Card (visible when not authenticated) -->
                <Border x:Name="LoginCard" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <views:LoginView x:Name="LoginView"/>
                </Border>

                <!-- Server Selection Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Server" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                        <TextBox x:Name="ServerAddressTextBox"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Text="vpn.example.com"/>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Port" FontSize="12" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBox x:Name="PortTextBox" Grid.Column="1" Width="100"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="443" TextAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusBarText" Text="Ready"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="v1.0.0"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Settings Overlay -->
        <Border x:Name="SettingsOverlay" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#80000000">
            <Border Style="{StaticResource CardStyle}" Margin="20"
                    VerticalAlignment="Center" MaxHeight="500">
                <views:SettingsView x:Name="SettingsView" CloseRequested="SettingsView_CloseRequested"/>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#80000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                             Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock x:Name="LoadingText" Text="Connecting..."
                           Foreground="White" FontSize="14" Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
